<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_border_2">

    <ImageView
        android:id="@+id/imagecart"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/layout_border_3"
        android:elevation="10dp"/>

    <TextView
        android:id="@+id/menu_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagecart"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/bmjua"
        android:gravity="center"
        android:text="fdasf"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@+id/imagecart"
        android:gravity="center"
        android:fontFamily="@font/bmjua"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="수량 : "/>

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/amount"
        android:gravity="center"
        android:fontFamily="@font/bmjua"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="n"/>
    <TextView
        android:id="@+id/cart_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imagecart"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/imagecart"
        android:gravity="center"
        android:fontFamily="@font/bmjua"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="9000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_alignBottom="@+id/imagecart"
        android:layout_toRightOf="@+id/cart_pay"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="￦"/>
    <Button
        android:id="@+id/delete_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/btn_shape1"
        android:gravity="center"
        android:fontFamily="@font/bmjua"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="삭제"
        android:onClick="onClick"
        />


</RelativeLayout>